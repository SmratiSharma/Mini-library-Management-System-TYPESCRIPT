{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    /* Allow importing default/commonjs modules */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Recommended strict checks */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
